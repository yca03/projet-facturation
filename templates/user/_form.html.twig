<fieldset>
    <legend>Identification de l'utilisateur </legend>
    <hr>

    <div class="row">
            <div class="col-4">
                <div class="form-group">
                    <label for="numero_fiche_besoin">Nom *</label>
                    {{ form_widget(form.nom, {'attr' : {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="col-4">
                <div class="form-group">
                    <label for="date_etablissement">Prénoms *</label>
                    {{ form_widget(form.prenom, {'attr' : {'class': 'form-control'}}) }}
                </div>
            </div>
        <div class="col-4">
            <div class="form-group">
                <label for="objet">Contact *</label>
                {{ form_widget(form.contact, {'attr' : {'class': 'form-control'}, 'expanded': false}) }}

            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-4">
            <div class="form-group">
                <label for="numero_fiche_besoin"> Email *</label>
                {{ form_widget(form.email, {'attr' : {'class': 'form-control'}}) }}
                {{ form_errors(form.email) }}
            </div>
        </div>

         <div class="col-4">
            <div class="form-group">
                <label for="objet">Nom d'utilisateur *</label>
                {{ form_widget(form.nomUtilisateur, {'attr' : {'class': 'form-control  '}}) }}
            </div>
        </div>

        <div class="col-4">
            <div class="form-group">
                <label for="date_etablissement">Mot de passe *</label>
                {{ form_widget(form.password, {'attr' : {'class': 'form-control'}}) }}
            </div>
        </div>



    </div>


    <div class="row">


        <div class="col-4">
            <div class="form-group">
                <label for="objet">Rôles d'utilisateur *</label>
                {{ form_widget(form.roles, {'attr' : {'class': 'form-control select2 '}, 'expanded': false}) }}
            </div>
        </div>

        <div class="col-4">
            <div class="form-group">
                <br><br>
                <label for="objet"></label>
                <div class="form-check form-check-inline">
                    {{ form_widget(form.status, {'attr' : {'class': 'form-check-input'}}) }}
                    <label class="form-check-label" for="status"> &nbsp; Si Oui Cocher la Case </label>
                </div>
            </div>
        </div>

    </div>





</fieldset>