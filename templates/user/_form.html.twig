<fieldset>
    <legend>Identification de l'utilisateur</legend>
    <hr>

    <div class="row">
        <div class="col-6">
            <div class="form-group">
                <label for="form_nom">Nom *</label>
                {{ form_widget(form.nom, {'attr': {'id': 'form_nom', 'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="col-6">
            <div class="form-group">
                <label for="form_prenom">Prénoms *</label>
                {{ form_widget(form.prenom, {'attr': {'id': 'form_prenom', 'class': 'form-control'}}) }}
            </div>
        </div>

    </div>


    <legend>Coordonnées </legend>
    <hr>
         <div class="row">
            <div class="col-6">
                <div class="form-group">
                    <label for="form_contact">Contact *</label>
                    {{ form_widget(form.contact, {'attr': {'class': 'form-control'}, 'expanded': false}) }}
                </div>
            </div>
            <div class="col-6">
                <div class="form-group">
                    <label for="form_email">Email *</label>
                    {{ form_widget(form.email, {'attr': {'id': 'form_email', 'class': 'form-control'}}) }}
                    {{ form_errors(form.email) }}
                </div>
            </div>
         </div>

    <legend>Informations de connexion</legend>
    <hr>

    <div class="row">

        <div class="col-6">
            <div class="form-group">
                <label for="form_nomUtilisateur">Nom d'utilisateur *</label>
                {{ form_widget(form.nomUtilisateur, {'attr': {'id': 'form_nomUtilisateur', 'class': 'form-control'}}) }}
            </div>
        </div>

        {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_SUPER_ADMIN') %}
            {% if form.roles is defined %}
                <div class="col-6">
                    <div class="form-group">
                        <label for="form_roles">Rôles *</label>
                        {{ form_widget(form.roles, {'attr': {'class': 'form-control select2'}, 'expanded': false}) }}
                    </div>
                </div>
            {% endif %}
        {% endif %}
    </div>


        <div class="row">
        <div class="col-6">
            <div class="form-group">
                <label for="tf5">Statut de l'utilisateur</label>
                <div class="custom-control custom-switch">
                    {{ form_widget(form.status, {'attr': {'class': 'custom-control-input', 'id': 'customSwitch1'}}) }}
                </div>
            </div>
        </div>
    </div>
</fieldset>
