{% extends 'base.html.twig' %}

{% block title %}Notify index{% endblock %}

{% block body %}
    <h1>Notify index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Uid</th>
                <th>Message</th>
                <th>Link</th>
                <th>Statut</th>
                <th>DateDebut</th>
                <th>DateFin</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for notify in notifies %}
            <tr>
                <td>{{ notify.id }}</td>
                <td>{{ notify.uid }}</td>
                <td>{{ notify.message }}</td>
                <td>{{ notify.link }}</td>
                <td>{{ notify.statut }}</td>
                <td>{{ notify.dateDebut ? notify.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ notify.dateFin ? notify.dateFin|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_notify_show', {'id': notify.id}) }}">show</a>
                    <a href="{{ path('app_notify_edit', {'id': notify.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_notify_new') }}">Create new</a>
{% endblock %}
