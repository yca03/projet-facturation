<fieldset>
    <input type="hidden" id="widget-counter-detail-ModePayement" name="widget-counter-detail-ModePayement"
           value="{{ form.detailModePayements|length }}">
    <legend>Détail Mode de règlement</legend>
    <div class="table-responsive">
        <table class="table table-sm bordered" id="table_detail_ModePayement">
            <thead>
            <tr>
                <th>Référence</th>
                <th class="compte-banque">Numéro Compte Banque</th>
                <th class="banque-client">Banque client</th>
                <th>Montant</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {{ form_widget(form.detailModePayements) }}
            </tbody>
        </table>
    </div>
</fieldset>






