{% form_theme form 'encaissement/_collection.html.twig' %}
<fieldset>
    <legend>Identification de l'encaissement</legend>
    <div class="row">

        <div class="col-6">
            <div class="form-group">
                <label for="date_etablissement">Date *</label>
                {{ form_widget(form.date, {'attr' : {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="col-6">
            <div class="form-group">
                <label for="objet">Réference d'encaissement *</label>
                {{ form_widget(form.reference , {'attr' : {'class': 'form-control'}}) }}
            </div>
        </div>

    </div>


    <div class="row">
        <div class="col-6">
            <div class="form-group">
                <label for="objet">Société *</label>
                {{ form_widget(form.clients, {'attr': {'id': 'encaissement_clients', 'class': 'form-control select2'}}) }}
            </div>
        </div>

        <div class="col-6">
            <div class="form-group">
                <label for="objet">Mode de Payement *</label>
                {{ form_widget(form.modePayement, {'attr' : {'id': 'encaissement_modePayement', 'class': 'form-control select2'}}) }}
            </div>
        </div>
    </div>
</fieldset>


<fieldset>
    <input type="hidden" id="widget-counter-detail-encaissement" name="widget-counter-detail-encaissement"
           value="{{ form.detatilEncaissements|length }}">
    <legend>Détail d'encaissement</legend>
    <div class="table-responsive">
        <table class="table table-sm bordered" id="table_detail_encaissement">
            <thead>
            <tr>
                <th>Réference</th>
                <th>Montant Dû</th>
                <th>Montant Versé</th>
                <th>Solde</th>
                <th>action</th>
            </tr>
            </thead>
            <tbody>
            {{ form_widget(form.detatilEncaissements) }}
            </tbody>
        </table>
    </div>
</fieldset> <br><br><br>

