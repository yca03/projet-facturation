{% extends 'base.html.twig' %}

{% block title %}Impression FactureProForma | {% endblock %}

{% block stylesheets %}


    <style>
        body {
            margin: 0;
            padding: 0;
            height: 100%;
        }
        td,th
        {
            padding: 50px;
        }
        .invoice-container {
            width: 80%;
            height: 100%;
            padding: 20px;
            margin: auto;

        }
        .invoice-header {
            text-align: center;
            border: 2px solid grey;
            border-radius: 10px;
            padding: 30px;
            margin-bottom: 50px;
        }
        .invoice-header h1 {
            margin: 0;
        }
        .invoice-details, .invoice-items {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        .invoice-details th, .invoice-details td, .invoice-items th, .invoice-items td {
            border: 2px solid grey;
            padding: 20px;
            text-align: center;
            font-size: 15px !important;
        }
        .invoice-items th {
            background-color: #f9f9f9;
            padding: 30px;
        }
        .invoice-items td
        {
            text-align: right;
        }
        .total-row {
            font-weight: bold;
        }

        button.back
        { background: #21244e;
            color: white;
            padding: 15px;
            border: 1px solid white;
            background: #71cfed;
            border-radius: 10px;
            cursor: pointer;
            margin: 20px auto 0;
            width: fit-content;
        }
        button a
        {
            color: white;
        }
        button a:hover
        {
            color: white;
            text-decoration: none;
        }

        @media print {
            .print-button, .back {
                display: none !important;
            }
        }
        @media (max-width: 600px) {
            .invoice-details, .invoice-items {
                font-size: 12px;
            }
            .invoice-details th, .invoice-details td, .invoice-items th, .invoice-items td {
                padding: 6px;
            }
        }


        .btn-oui {
            background-color: #28a745; /* Couleur verte */
            color: white;
            border: none;
        }

        .btn-oui:hover {
            background-color: #218838; /* Couleur verte plus foncée au survol */
        }

        /* Style pour le bouton NON */
        .btn-non {
            background-color: #dc3545; /* Couleur rouge */
            color: white;
            border: none;
        }

        .btn-non:hover {
            background-color: #c82333; /* Couleur rouge plus foncée au survol */
        }
    </style>
{% endblock %}

{% block body %}
    <div class="invoice-container">
        <div class="invoice-header">
            <h1>FACTURE PROFORMA N°: {{ facture_pro_format.numeroFacturePro }}</h1>
        </div>
        <table class="invoice-details">
            <tr>
                <th>Date d'émission</th>
                <th>Référence</th>
                <th>Client</th>
                <th>Mode de règlement</th>
            </tr>
            <tr>
                <td>{{ facture_pro_format.date|date("d/m/Y") }}</td>
                <td> {{ facture_pro_format.reference }}</td>
                <td>{{ facture_pro_format.clients.nom }}</td>
                <td> {{ facture_pro_format.modePayement.nom }}</td>
            </tr>
        </table>
        <table class="invoice-items">
            <thead>
            <tr>
                <th>Produits</th>
                <th>Quantités</th>
                <th>Prix unitaire (Fcfa)</th>
                <th>Montant HT</th>
                <th>Montant TVA</th>
                <th>Montant TTC</th>
            </tr>
            </thead>
            <tbody>

            {% for detail in facture_pro_format.detailFacture %}
                <tr>
                    <td>{{ detail.produit.libelle }}</td>
                    <td>{{ detail.quantite }}</td>
                    <td>{{ detail.prix  |number_format(0, '.', ' ') }}</td>
                    <td>{{ detail.montantHT |number_format(0, '.', ' ') }}</td>
                    <td>{{ detail.montantTVA |number_format(0, '.', ' ') }}</td>
                    <td>{{ detail.montantTTC |number_format(0, '.', ' ')}}</td>
                </tr>
            {% endfor %}
            <tr class="total-row">
                <td colspan="3">TOTAL A PAYER</td>
                <td>{{ facture_pro_format.totalHT |number_format(0, '.', ' ') }}</td>
                <td>{{ facture_pro_format.totalTVA |number_format(0, '.', ' ') }}</td>
                <td>{{ facture_pro_format.totalTTC |number_format(0, '.', ' ') }}</td>
            </tr>

            </tbody>
        </table>
    <div style="text-align: right;">
        <p><em>Signature / date </em></p>

        <br><br>

        {% if is_granted('ROLE_VALIDED_FACTURE_PRO') %}

        <button class="btn btn-info print-button">
            <i class="fa-solid fa-back"></i> <a href="{{ path('app_facture_pro_format_info') }}">retour</a>
        </button>&nbsp;&nbsp;


        <form method="post" action="{{ path('app_facture_pro_format_valider', {'id': facture_pro_format.id}) }}" id="validationForm" onsubmit="return confirm('Voulez-vous vraiment validé');" style="display: inline;">
            <input type="hidden" name="_token" value="{{ csrf_token('validé' ~ facture_pro_format.id) }}">
            <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#exampleModal">
                valider
            </button>
        </form>&nbsp;&nbsp;

        {% endif %}

        {% if is_granted('ROLE_FACTURE_PRO') %}
        <form method="post" action="{{ path('app_facture_pro_format_soumission', {'id': facture_pro_format.id}) }}" onsubmit="return confirm('Voulez-vous vraiment soumettre');" style="display: inline;">
            <input type="hidden" name="_token" value="{{ csrf_token('soumission' ~ facture_pro_format.id) }}">
            <button type="submit"  class="btn btn-warning text-dark print-button" > <i class="fa-solid fa-paper-plane"></i> &nbsp; soumettre</button>
        </form>&nbsp;&nbsp;
        {% endif %}

        {% if is_granted('ROLE_VALIDED_FACTURE_PRO') %}

        <form method="post" action="{{ path('app_facture_pro_format_annulation', {'id': facture_pro_format.id}) }}" onsubmit="return confirm('Voulez-vous vraiment annulé');" style="display: inline;">
            <input type="hidden" name="_token" value="{{ csrf_token('annulation' ~ facture_pro_format.id) }}">
            <button type="submit"  class="btn btn-danger text-dark print-button" ><i class="fa-solid fa-xmark"></i>  &nbsp; annulé</button>
        </form>&nbsp;&nbsp;

        {% endif %}

        <button class="btn btn-secondary print-button" onclick="window.print()">
            <i class="fa-solid fa-print"></i> Imprimer
        </button>

    </div>


    <!-- Modal -->
   <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="exampleModalLabel">Validation</h3>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Voulez-vous vraiment valider le document ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-non" data-bs-dismiss="modal">NON</button>
                <button type="button" class="btn btn-oui" id="confirmValidationButton">OUI</button>
            </div>
        </div>
    </div>
</div>



{% endblock %}
{% block javascripts %}
    <script>
    document.addEventListener('DOMContentLoaded', function () {
    // Trouver la modal et le bouton "OUI"
    var modal = document.getElementById('exampleModal');
    var confirmButton = document.getElementById('confirmValidationButton');
    var form = document.querySelector('form[action="{{ path('app_facture_pro_format_valider', {'id': facture_pro_format.id}) }}"]');

    if (confirmButton) {
        confirmButton.addEventListener('click', function () {
            // Soumettre le formulaire lorsque le bouton "OUI" est cliqué
            form.submit();
        });
    }
});
</script>

{% endblock  %}