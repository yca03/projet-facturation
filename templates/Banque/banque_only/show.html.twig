{% extends 'base.html.twig' %}

{% block title %}Banque Only{% endblock %}

{% block body %}
    <div class="col-12 col-md-12">
        <div class="card">
            <div class="card-header bg-soft-custom "style="background:#21244e; color:white;">
                <i class="fa-solid fa-list" style="font-size:30px;"></i> &nbsp; Liste des Banque
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover bordered table-sm basic-datatable">
                        <thead class="thead-light">
                        <tr>
                            <th class="text-center">ID</th>
                            <th class="text-center">Nom </th>
                            <th class="text-center">Code Banque</th>
                        </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th class="text-center">{{ banque_only.id }}</th>
                                <td class="text-center">{{ banque_only.nom}}</td>
                                <td class="text-center">{{ banque_only.codeBanque }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

