
{% extends 'base.html.twig' %}

{% block title %}Banque {% endblock %}

{% block body %}
    <div class="col-12 col-md-12">
        <div class="card">
            <div class="card-header bg-soft-custom "style="background:#21244e; color:white;">
                <i class="fa-solid fa-list" style="font-size:30px;"></i> &nbsp; Liste  Banques
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover bordered table-sm basic-datatable">
                        <thead class="thead-light">
                        <tr>
                            <th class="text-center">ID</th>
                            <th class="text-center">Numéro Compte Banque </th>
                            <th class="text-center">Rib</th>
                             <th class="text-center">Code Agence</th>
                              <th class="text-center">Numéro BIC</th>
                               <th class="text-center">gestionnaire</th>
                        </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th class="text-center">{{ banque_client.id }}</th>
                                <td class="text-center">{{ banque_client.numeroCompteBanque}}</td>
                                <td class="text-center">{{ banque_client.rib }}</td>
                                 <td class="text-center">{{ banque_client.codeAgent }}</td>
                                  <td class="text-center">{{ banque_client.numeroBic }}</td>
                                   <td class="text-center">{{ banque_client.gestionnaire }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


