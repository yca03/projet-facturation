                    <th colspan="2">ID client</th>
                    <th colspan="2">Date expiration</th>
                </tr>
                <tr>
                    <td colspan="2">{{facture.idFacture}}</td>
                    <td colspan="2">{{ facture.dateExpirationFacture|date("d/m/Y")  }}</td>
                </tr>
            </table>
        </div>
    </div>
<br><br>
    <div class="container-row">
        <div class="section">
            <h4 class="highlight">Facture à</h4>
            <p>{{ facture.clientNom }}</p>
            <p>{{ facture.clientadresse }}</p>
            <p>{{ facture.clientcontact }}</p>
