{% extends 'base.html.twig' %}

{% block title %}Impression Facture | {% endblock %}

{% block stylesheets %}
<style>
    .container {
        max-width: 90%;
        margin: auto;
        padding: 20px;
        border: 1px solid white;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.15);
        font-size: 16px;
        line-height: 24px;
        color: #555;
    }

    .container-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
    }

    h1 {
        color: grey;
        margin-bottom: 80px;
    }

    h4 {
        height: 30px;
        width: 250px;
        font-size: 20px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    p {
        margin: 4px 0;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        border: 1px solid black;
        padding: 8px;
        text-align: right;
        width: 16.66%; /* Set equal width for all columns */
    }

    .no-border {
        border: none;
    }

    .highlight {
        background: rgb(177, 175, 175);
    }

    .section {
        flex: 1;
    }

    .section {
        margin-left: 20px;
    }
    .right-align {
        text-align: right;
    }
    .service
    {
        text-align:center; 
    }

    .total-row td {
        font-weight: bold;
    }

    .print-button {
        background: #21244e;
        color: white;
        padding: 15px;
        border: 1px solid black;
        border-radius: 10px;
        cursor: pointer;
        margin: 20px auto 0;
        width: fit-content;
    }

    .print-button i {
        margin-right: 10px;
    }

    @media print {
        .print-button {
            display: none !important;
        }
    }
</style>


{% endblock %}
{% block body %}
<div class="container">
    <div class="container-row">
        <div class="section">
            <h1>Facture</h1>
            <p><strong>OFFSET CONSULTING</strong></p>
            <p>Abidjan Cocody</p>
            <p>Tél : (+225) 25 22 01 59 71</p>
            <p>Cel : (+225) 07 78 63 63 06</p>
            <p>Email : contact@offset-consulting.com</p>
