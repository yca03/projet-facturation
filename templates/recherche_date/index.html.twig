{% extends 'base.html.twig' %}

{% block title %}Etat des Factures {% endblock %}


{% block body %}

    <div class="col-12">

        <div class="card card-fluid">
            <div class="card-header bg-soft-custom" id="bg">
                <h6><i class="fa-solid fa-list" style="font-size:20px;"></i> Recherche d'Etat</h6>
            </div>

            <div class="card-body">
                <div class="row justify-content-center">
                    <div class="col-8">
                        <form method="get" action="{{ path('app_recherche_date') }}" class="formDate d-flex justify-content-center align-items-center">
                            <input type="date" name="dateDebut" class="form-control input-large mx-2">
                            <input type="date" name="dateFin" class="form-control input-large mx-2">
                            <i class="fa-solid fa-magnifying-glass"></i> <input type="submit" value="Rechercher"  class="btn btn-success float-right ml-3">
                        </form>
                    </div>
                </div>
            </div>

        </div>

    </div>



    <div class="col-12 col-md-12">
        <div class="card">
            <div class="card-header bg-soft-custom "style="background:#21244e; color:white;">
                <i class="fa-solid fa-list" style="font-size:30px;"></i> &nbsp;Etat des Factures
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover bordered table-sm ">
                        <thead class="thead-light">

                        <tr>
                            {#                            <th class="text-center">ID</th>#}
                            <th class="text-center">ID</th>
                            <th class="text-center">Date </th>
                            <th class="text-center">Type de Société</th>
                            <th class="text-center">Nom</th>
                            <th class="text-center">Services</th>
                            <th class="text-center">quantite</th>
                            <th class="text-center">Prix</th>
                            <th class="text-center">Remise</th>
                            <th class="text-center">Montant HT</th>
                            <th class="text-center">montant TVA</th>
                            <th class="text-center">Montant TTC</th>
                            <th class="text-center">Contact</th>
                            <th>actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for facture in factures %}
                            <tr>
                                {# <th class="text-center">{{ facture.idFacture }}</th> #}
                                <th class="text-center">{{ facture.idFacture }}</th>
                                <td class="text-center">{{ facture.dateFacture|date("d/m/Y")}}</td>
                                <td class="text-center">{{ facture.clientTypeSociete }}</td>
                                <td class="text-center">{{ facture.clientNom }}</td>
                                <td class="text-center">{{ facture.produit }}</td>
                                <td class="text-center">{{ facture.quantite }}</td>
                                <td class="text-center">{{ facture.prix }}</td>
                                <td class="text-center">{{ facture.remise }}</td>
                                <td class="text-center">{{ facture.montantHT }}</td>
                                <td class="text-center">{{ facture.montantTVA }}</td>
                                <td class="text-center">{{ facture.montantTTC }}</td>
                                <td class="text-center">{{ facture.clientcontact }}</td>
                                <td class="text-center"><a href="{{ path('app_impression', {'id': facture.idFacture}) }}" style="color:black;"><i class="fa-solid fa-file-pen"></i></a></td>

                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer">
                {#                <div class="card-footer-content">#}
                {#                    <a href="{{path('app_clients_new')}}" class="btn btn-primary float-right ml-2">#}
                {#                        Nouveau</a>#}
                {#                    <a href="{{path('app_home')}}" class="btn btn-success float-right ml-3">#}
                {#                        <i class="oi oi-home"></i>#}
                {#                        Accueil</a>#}
                {#                </div>#}
            </div>
        </div>
    </div>



{% endblock %}